<div class="container px-5 px-sm-0">

  <div class="row">
    <div class= "col-md-3">
      <%= render 'public/genres/index', genres: @genres %>
    </div>

 <div class= "col-md-8 offset-md-1">
 <div class="col-md-5">
  <h3>新着商品</h3>
 </div>
  <div class="album py-5 bg-light">
  <div class="d-flex justify-content-around">
  <% @items.each do |item| %>

  <div class="col-md-2">
  <%= link_to public_item_path(item.id) do %>
  <%= image_tag item.get_image("100x100") %>
  <div class="body">
  <%= item.name %>
  <% end %>
  <p><%= item.with_tax_price %>円</p>
  <p>(税込)</p>
  </div>
  </div>
  <% end %>
  </div>
  </div>
  <div class="d-flex justify-content-end col-md-10 mt-5">
  <%= link_to public_items_path do %>
  全ての商品を見る >>
  <% end %>
  </div>

  </div>
  </div>
  </div>
</div>





