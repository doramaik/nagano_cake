
<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class= "container">
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

                 <li>
                  <%= link_to new_customer_registration_path, class: 'nav-link text-dark' do %>
                  新規登録
                  <% end %>
                </li>
                 <li>
                  <%= link_to customer_session_path, class: 'nav-link text-dark' do %>
                  ログイン
                  <% end %>
                </li>
                 <li>
                  <%= link_to public_customer_path, class: 'nav-link text-dark' do %>
                  マイページ
                  <% end %>
                </li>
                 <li>
                  <%= link_to  destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' do %>
                  ログアウト
                  <% end %>
                </li>
                <li>
                  <%= link_to  public_home_about_path, class: 'nav-link text-dark' do %>
                  About
                  <% end %>
                </li>
                <li>
                  <%= link_to  public_items_path, class: 'nav-link text-dark' do %>
                  商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to  public_cart_items_path, class: 'nav-link text-dark' do %>
                  カート
                  <% end %>
                </li>

            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
