<body>
    <main>
        <div class = container>
            <div class = row>
                <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                    <h1>ジャンル編集</h1>
                    <%= form_with model: [:admin, @genre] do |f| %>
                      <div class="form-group">
                        <label for="book_title">ジャンル名</label>
                        <%= f.text_field :name, autofocus: true, placeholder: @genre.name, class: "form-control genre_name" %>
                      </div>
                      <div class = "form-group">
                        <%= f.submit "変更を保存", class: "btn btn-success" %>
                      </div>
                    <% end %>
                </div>
            </div>
        </div>
    </main>
</body>
