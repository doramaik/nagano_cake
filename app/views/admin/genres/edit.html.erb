<div class = "container">
    <div class = "row">
     <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h4>ジャンル編集</h4>
       <%= form_with model: [:admin, @genre] do |f| %>
          <div class = "form-inline my-5">
            <label for="book_title">ジャンル名</label>
            <div class = "ml-3"><%= f.text_field :name, autofocus: true, placeholder: @genre.name, class: "form-control genre_name" %></div>
            <div class = "ml-3"><%= f.submit "変更を保存", class: "btn btn-success px-3" %></div>
          </div>
       <% end %>
     </div>
    </div>
</div>

