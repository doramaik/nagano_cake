<h2 class="mt-3">ジャンル一覧・追加</h2>
 <div class="container">
   <div class= "row-12">
    <%= form_with model: [:admin, @genre], local: true do |f| %>
      <div class="col-sm-3"><%= f.label "ジャンル" %></div>
      <div class="col-sm-4"><%= f.text_field :name, placeholder: "ジャンル名", class: "form-control genre_title" %></div>
      <div class= "col-sm-2"><%= f.submit "新規登録", class: "btn btn-sm btn-success" %></div>
    </div>
  <% end %>




 <table class="table mx-auto">
  <thead>
   <tr>
    <th scope="col-sm-2">ジャンル</th>
    <th colspan="1"></th>
   </tr>
  </thead>
  <tbody>
   <% @genres.each do |genre| %>
    <tr>
     <th scope="row"><%= genre.name %></th>
     <td>
      <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-success edit_genre" %>
     </td>
    </tr>

   <% end %>
  </tbody>
 </table>
 </div>