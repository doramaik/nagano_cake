
<body>
    <main>
      <div class= container px-5 px-sm-0>
        <div class = row>
           <h2 class="mt-3">ジャンル一覧・追加</h2>
            <%= form_with model: @genre, url: '/admin/genres',method: :post, local: true do |f| %>
              <div class = "form-group">
                  <label for="genre_name">ジャンル名</label>
                  <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control genre_title" %>
              </div>
              <div class = "form-group">
                  <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
              </div>
            <% end %>

            <table>
              <thead>
                <tr>
                  <th>ジャンル名</th>
                  </tr>
              </thead>
              <tbody>
                <% @genres.each do |genre| %>
                  <tr>
                    <td><%= genre.name %></td>
                  </tr>
                  <tr>
                      <td>
                        <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-success edit_genre" %>
                      </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
    </main>
</body>
