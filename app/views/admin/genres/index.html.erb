<h2 class="mt-3">ジャンル一覧・追加</h2>
 <div class="container">

<div class="form-inline">
  <div class="form-group">
   <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
  </div>
   <label for="genre_name">ジャンル名</label>
   <div class="form-group">
   　<%= f.text_field :name, placeholder: "ジャンル名", class: "form-control genre_title" %>
   </div>
   <div class="form-group">
   　<%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
   </div>
   <% end %>
  </div>



 <table class="table mx-auto">
  <thead>
   <tr>
    <th scope="col-sm-2">ジャンル</th>
    <th colspan="1"></th>
   </tr>
  </thead>
  <tbody>
   <% @genres.each do |genre| %>
    <tr>
     <th scope="row"><%= genre.name %></th>
     <td>
      <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-success edit_genre" %>
     </td>
    </tr>

   <% end %>
  </tbody>
 </table>
 </div>

 <%= paginate @genres %>