<div class = "container">
  <div class = "row">
    <div class = "col-sm-4 mx-auto">
      <div><%= image_tag @item.get_image("300x300") %></div>
    </div>
    <div class = "col-sm-8 mx-auto">
      <h4 class = "text-center mb-3">商品詳細</h4>

      <table class="table table-hover teble-inverse mb-5">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.text %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税抜き価格</td>
              <td><%= @item.price.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td><%= @item.is_active ? "販売中" : "販売停止中" %></td>
            </tr>
          </tbody>
      </table>

      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success px-3" %>
    </div>
  </div>
</div>





