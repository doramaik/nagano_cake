
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model:[:admin, @item] do |f| %>
  <div class = "container">
    <div class = "col-sm-6 mx-auto">


    <h4 class = "mb-3">商品新規登録</h4>
    <div class = "row mb-2">
          <label class = "col-sm-4">商品画像</label>
          <%= f.file_field :image, accept: "image/*" %>
    </div>

    <div class = "row mb-2">
        <label class = "col-sm-4">商品名</label>
        <%= f.text_field :name, class: "form-control item_name col-sm-8 col-md-offset-5" %>
    </div>


      <div class="row mb-2">
        <label class = "col-sm-4">商品説明</label>
        <%= f.text_area :text, class: "form-control item_expanation col-sm-8 col-md-offset-5" %>
      </div>

      <div class="row mb-2">
        <label class = "col-sm-4">ジャンル</label>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), prompt: "--選択してください--" %>
      </div>

      <div class="row mb-2">
        <label class = "col-sm-4">税抜き価格</label>
        <%= f.text_field :price, class: "form-control item_price col-sm-6 col-md-offset-5"  %>
        <span class = "col-sm-2 align-bottom">円</span>
      </div>

      <div class="row mb-2">
        <label class = "col-sm-4">販売ステータス</label>
        <%= f.select :is_active, [['販売中', true], ['販売停止', false]], prompt: "--選択してください--" %>
      </div>
      <div class = "text-center">
      <%= f.submit '投稿', class: "btn btn-lg  btn btn-outline-primary mt-5 " %>
      </div>

    </div>
  </div>

<% end %>
