<h1>商品新規登録</h1>

<%= form_with model: @item, url: new_admin_item_path do |f| %>

<div class="form-group">
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :image, accept: "image/*" %>
</div>

<div class="form-group">
  <%= f.label :name, "商品名" %>
  <%= f.text_field :name %>
</div>

<div class="form-group">
  <%= f.label :text, "商品説明" %>
  <%= f.text_area :text %>
</div>

<div class="form-group">
  <%= f.label :genre_id, "ジャンル" %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), prompt: "--選択してください--" %>
</div>

<div class="form-group">
  <%= f.label :price, "税抜き価格" %>
  <%= f.text_field :price %>円
</div>

<div class="form-group">
  <%= f.label :is_active, "販売ステータス" %>
  <%= f.select :is_active, [['販売中', true], ['販売停止', false]], prompt: "--選択してください--" %>
</div>

<%= f.submit '投稿' %>

<% end %>
