<%= button_to "商品追加", {controller: 'items', action: 'new'}, {method: :get} %>
      <div class="container">
         <h2>商品一覧</h2>
        <div class="row">
            <table>
              <thead>
                <tr>商品ID</tr>
                <tr>商品名</tr>
                <tr>税抜価格</tr>
                <tr>ジャンル</tr>
                <tr>ステータス</tr>
              </thead>
              <tbody>
                <% @items.each do |item| %>
                  <tr>
                    <td><%= item.id %></td>
                  </tr>
                  <tr>
                    <td><%= item.name %></td>
                  </tr>
                  <tr>
                    <td><%= item.price  %></td>
                  </tr>
                  <tr>
                    <td><%= item.genre  %></td>
                  </tr>
                  <tr>
                    <td><%= item.is_active %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
