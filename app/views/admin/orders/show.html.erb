    <h2 class="col-sm-4">注文履歴詳細</h2>

    <dt class="col-sm-3">購入者</dt>
    <dd class="col-sm-9">
        <%= @customer.last_name %><%= @customer.first_name %>
   </dd>
    <dt class="col-sm-3">注文日</dt>
    <dd class="col-sm-9"><%= @order.created_at %></dd>
