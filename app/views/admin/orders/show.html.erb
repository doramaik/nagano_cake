    <dd class="col-sm-9"> <%= @order.payment_method %></dd>
    <dt class="col-sm-3">注文ステータス</dt>
    <dd class="col-sm-9">
        <%= f.select :order_status, options_from_collection_for_select(Order.all, :id, :order_status) %>

    </dd>
    <dd class="col-sm-4">
</div>