<%= link_to  destroy_admin_session_path, method: :delete do %><i class="fas fa-sign-out-alt"></i>Log out<% end %>

<h1>注文履歴一覧</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">購入日時</th>
      <th scope="col">購入者</th>
      <th scope="col">注文個数</th>
      <th scope="col">注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <th scope="row">
        <%= link_to admin_order_path(order) do %>
        <%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
        <% end %>
      </th>
      <td><%= order.name %></td>
      <td><%= order.order_detail.count%></td>
      <td><%= order.order_status %></td>
    </tr>
    <% end %>
  </tbody>

</table>
