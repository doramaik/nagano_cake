<div class="container">
  <div class="row">
    <div class="col">
      <h4><strong>管理者ログイン</strong></h4>
    </div>
  </div>

<%= form_with model: [:admin, @admin], url: admin_session_path do |f| %>
  <div class = "form-field my-3">
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>


  <div class="actions mt-4">
    <%= f.submit "ログイン", class: "btn btn-primary p-2" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>

</div>

