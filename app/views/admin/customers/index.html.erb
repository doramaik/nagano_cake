<div class = "container">
    <div class = "col-sm-10 px-sm-0 mx-auto">
      <h4 class = "mb-5 text-center">会員一覧</h4>
      
      <table class="table table-hover teble-inverse my-5 mx-auto">
        <thead class = "table-secondary">
          <tr>
          <th scope="col-sm-4">会員ID</th>
          <th scope="col-sm-4">氏名</th>
          <th scope="col-sm-4">メールアドレス</th>
          <th scope="col-sm-4">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
            <th scope="row"><%= customer.id %></th>
            <th scope="row">
              <%= link_to admin_customer_path(customer) do %>
                <%= customer.last_name %>
                <%= customer.first_name %>
              <% end %>
            </th>
            <th scope="row"><%= customer.email %></th>
            <th scope="row"><%= customer.is_deleted ? "退会" : "有効" %></th>
            </tr>
          <% end %>
        </tbody>
        
      <%= paginate @customers %>
      
      </table>
    </div>
</div>




