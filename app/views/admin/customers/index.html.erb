<body>
  <div>
    <main>
      <div container>
        <div row>
          <h2>会員一覧</h2>
            <% @customers.each do |customer| %>
              <table>
                <thead>
                  <tr>会員ID</tr>
                  <tr>氏名</tr>
                  <tr>メールアドレス</tr>
                  <tr>ステータス</tr>
                </thead>
                <tbody>
                  <tr>
                    <td><%= customer.id %></td>
                  </tr>
                  <tr>
                    <td>
                      <% link_to admin_customer_path do %>
                      <span><%= customer.lasname %></span>
                      <span><%= customer.first_name %></span>
                      <% end %>
                    </td>
                  </tr>
                  <tr>
                    <td><%= customer.email  %></td>
                  </tr>
                  <tr>
                    <td><%= customer.is_deleted %></td>
                  </tr>
                </tbody>
              </table>
            <% end %>

          <div class = form-group>
              <%= f.submit 'Create Item', class: "btn btn-sm btn-success" %>
          </div>

        </div>
        </div>
    </main>
  </div>
</body>
