<div class="container">
    <div class="row">
    <div class="col">
<h2>ショッピングカート</h2>
</div>
<div class="col-md-auto"></div>
<div class="col col-lg-2">
<%= link_to public_cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" do %>カートを空にする<% end %>
</div>
</div>
<table class="table table-bordered">
  <thead class="table-secondary">
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価(税込)</th>
      <th scope="col">個数</th>
      <th scope="col">小計</th>
      <th scope="col"></th>
      </tr>

  </thead>
  <tbody>
  <% @total = 0 %>
  <% @cart_items.each do |cart_item| %>
      <tr>
          <td scope="row">
            <%= image_tag cart_item.item.get_image("50x50") %>
            <%= cart_item.item.name %>
            </td>
          <td scope="row"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
          <td scope="row">
            <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), method: :patch do |f| %>
            <%= f.hidden_field :amount, value: cart_item.amount %>
            <%= f.select :amount,*[1..10] %>
            <%= f.submit "変更", class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
          <td scope="row"><%= cart_item.subtotal.to_s(:delimited) %></td>
          <td scope="row"><%= link_to public_cart_item_path(cart_item), method: :delete, class: "btn btn-danger btn-sm" do %>削除する<% end %></td>
          <!--@totalに小計をeach文で繰り返し入れていく-->
          <% @total += cart_item.subtotal %>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-2 offset-1">
<%= link_to  root_path, class: "btn btn-primary" do %>買い物を続ける<% end %>
</div>
<div class="col-3 offset-6">
<table class="table table-bordered">
  <tr>
    <th class="table-secondary">商品合計</th>
    <th><%= @total.to_s(:delimited) %>円</th>
  </tr>
</table>
</div>
</div>
</div>
<div class="row">
<div class="col-6 offset-5">
<%= link_to new_public_order_path(@cart_items), class: "btn btn-success btn-lg" do %>情報入力へ進む<% end %>
</div>
</div>
</div>