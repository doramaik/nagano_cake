<h1>ショッピングカート</h1>

<table>
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
  </thead>
  <tbody>
  <% @cart_item.each do |cart_item| %>
      <tr>
          <td><%= cart_item.itme.name %></td>
          <td><%= cart_item.item.with_tax_price%></td>
          <td><%= cart_item.item.count %></td>
          <td><%= cart_item.subtotal%></td>
          <% @合計金額 +=  (cart_item.price * 1.1).floor * cart_item.amount %>
      </tr>
  <% end %>
  </tbody>
</table>
