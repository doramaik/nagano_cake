<h2>配送先登録/一覧</h2>
<div class= "conteiner">
  <%= form_with model: [:public, @address] do |f| %>
    <div class="row mx-auto form-group">
      <dt class="col-sm-3"><%= f.label "郵便番号（ハイフンなし）" %></dt>
      <dd class="col-sm-4"><%= f.text_field :postal_code, class: 'form-control postal_code' %></dd>
    </div>

    <div class= "row mx-auto form-group">
      <dt class="col-sm-3"><%= f.label "住所" %></dt>
      <dd class="col-sm-6"><%= f.text_field :address, class: 'form-control address' %></dd>
    </div>

    <div class= "row mx-auto form-group">
      <dt class="col-sm-3"><%= f.label "宛名" %></dt>
      <dd class="col-sm-4"><%= f.text_field :name, class: 'form-control name' %></dd>
      <div class= "col-sm-2"><%= f.submit class: 'btn btn-success' %></div>
    </div>
  <% end %>


  <table class="row mx-auto table">
    <thead class="col-sm-10">
      <tr>
        <td>郵便</td>
        <td>住所</td>
        <td>宛名</td>
        <td colspan="2"></td>
        </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to '編集する', edit_public_address_path(address), class: "btn btn-sm btn-success edit_address_#{address.id}" %>
            </td>
          <td>
            <%= link_to '削除する', address, method: :delete, data: { confirm: '本当に削除しますか？'}, class: "btn btn-sm btn-danger destroy_address_#{address.id}" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
