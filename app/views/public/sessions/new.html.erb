<div class="container mt-5">
  <h2>ログイン</h2>
  <%= form_with model: [:public, @customer], url: customer_session_path do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 20rem;" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "width: 20rem;"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "パスワードを記憶する" %>
    </div>
  <% end %>

  <div class="actions mt-2">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>
  <div class="row mt-4">
    <div class="col-md-4">
      <h5>会員登録がお済みでない方</h5>
        <%= render "public/shared/links" %>
     </div>
    </div>
</div>