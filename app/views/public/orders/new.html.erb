<h1>注文情報入力</h1>

<%= form_with model: @order, url: public_orders_order_confirm_path,method: :post do |f| %>

 <h4>お支払い方法</h4>
    <%= f.radio_button :payment_method, "credit_card" %>
    <%= f.label :payment_method,"クレジットカード"%>

    <%= f.radio_button :payment_method, "transfer" %>
    <%= f.label :payment_method,"銀行振込" %>

  <h4>お届け先</h4>
  <div>
    <%= f.radio_button :address, 1 %>
    <%= f.label :address,"ご自身の住所" %>
  </div>
  <div>
    <%= f.radio_button :address, 2 %>
    <%= f.label :address,"登録済住所から選択" %>
    <%= f.select :address_id, options_from_collection_for_select(Address.all,:id,:address_display) %>
  </div>
  <div>
    <%= f.radio_button :address, 3 %>
    <%= f.label :address,"新しい届出先" %>
  </div>

  <div class="row">
    <dt class="col-sm-3"><%= f.label :postal_code,"郵便番号（ハイフンなし）" %></dt>
    <dd class="col-sm-9"><%= f.text_field :postal_code %></dd>
    <dt class="col-sm-3"><%= f.label :shipping_address,"住所" %></dt>
    <dd class="col-sm-9"> <%= f.text_field :shipping_address %></dd>
    <dt class="col-sm-3"><%= f.label :shipping_name,"宛名" %></dt>
    <dd class="col-sm-9"> <%= f.text_field :shipping_name %></dd>
  <div class="col-sm-8">
    <%= f.submit'確認画面へ進む' %>
  </div>
  </div>


  <% end %>

