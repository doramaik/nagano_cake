<div class="container">


<h2>新規会員登録</h2>

<%= form_with model: [:public, @customer], url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="form-group">
    名前
    <span>
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name" %>
    </span>
    <sapn>
    <%= f.label :first_name,"(名)" %>
    <%= f.text_field :first_name, autocomplete: "given-name" %>
    </span>
  </div>

  <div class="form-group">
    フリガナ
    <span>
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana, autocomplete: "family-name" %>
    </span>
    <span>
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana, autocomplete: "given-name" %>
    </span>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email", class: "w-25" %>
  </div>

  <div class="form-group">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autocomplete: "postal-code" %>
  </div>

  <div class="form-group">

    <%= f.label :address, "住所" %>
    <%= f.text_field :address, class: "w-50" %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
    <%= f.text_field :phone_number, autocomplete: "tel" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>


<h4>既に登録済みの方</h4>

<%= render "public/shared/links" %>

</div>