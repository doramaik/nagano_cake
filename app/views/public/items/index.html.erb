<body>
  <div>
    <main role ="main">
      <div class="col-md-5">
      <h2>商品一覧</h2>
      </div>
      <div class="album py-5 bg-light">
          <div class="d-flex justify-content-around">
            <% @items.each do |item| %>
            
              <div class="col-md-2 ml-5 border border-dark">
                <%= link_to public_item_path(item.id) do %>
                  <%= image_tag item.get_image("100x100") %>
                <div class="body">
                  <%= item.name %>
                <% end %>
                  <p><%= item.price %>円</p>
                </div>
              </div>
            <% end %>
          </div>
        <div class="d-flex justify-content-center">
          <div class="mt-5">
        <%= paginate @items %>
        </div>
      </div>
    </main>
  </div>
</body>