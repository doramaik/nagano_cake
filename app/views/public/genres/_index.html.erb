
<div class= "container">
  <div class = "row">
    <table class="table table-hover teble-inverse mt-3">
      <thead class = "table-secondary">
        <tr>
          <th>ジャンル一覧</th>
        </tr>
      </thead>
      <tbody>
        <% genres.each do |genre| %>
          <tr>
            <th>
              <%= link_to public_genre_path(genre), class: "btn btn-sm btn-light" do %>
                <%= genre.name %>
              <% end %>
            </th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>