<body>
  <div>
    <main role ="main">
      <h2>
        <%= @genre.name %>
        <span>一覧</span>
      </h2>
      <div class="album py-5 bg-light">
        <div calass="container">
          <div class="row">
            <% @genre.items.each do |item| %>
              <div class="col-md-2">
                <%= image_tag item.get_image("100x100") %>
                <div class="body">
                  <p><%= link_to item.name, public_item_path(item) %></p>
                  <p><%= item.genre.name %></p>
                  <p><%= item.text %></p>
                  <p><%= item.with_tax_price.to_s(:delimited) %>円</p>
                  <p><%= item.is_active ? "販売中" : "販売停止中" %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>