
  <div class="search-form">
    <%= form_with url: public_search_path, method: :get, local: true do |f| %>
      <%= f.text_field :content %>
      <%= f.select :model, options_for_select({"商品名" => "item"}) %>
      <%= f.select :method, options_for_select({"一部検索" => "partial"}) %>
      <%= f.submit '検索', class: "btn btn-success" %>
    <% end %>
  </div>
